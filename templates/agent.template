                        <i class="fas fa-times"></i> å–æ¶ˆ
                    </button>
                `;
            } else if (task.status === 'paused') {
                buttons = `
                    <button class="action-btn resume" onclick="resumeTask('${task.id}')">
                        <i class="fas fa-play"></i> æ¢å¤
                    </button>
                    <button class="action-btn cancel" onclick="cancelTask('${task.id}')">
                        <i class="fas fa-times"></i> å–æ¶ˆ
                    </button>
                `;
            } else if (task.status === 'pending') {
                buttons = `
                    <button class="action-btn cancel" onclick="cancelTask('${task.id}')">
                        <i class="fas fa-times"></i> å–æ¶ˆ
                    </button>
                `;
            }
            
            // Add delete button for completed/failed/canceled tasks
            if (['done', 'failed', 'canceled'].includes(task.status)) {
                 buttons += `
