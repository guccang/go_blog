        // æŸ¥çœ‹ä»»åŠ¡è¯¦æƒ…
        async function viewTaskDetail(taskId) {
            const task = currentTasks.find(t => t.id === taskId);
            if (!task) return;

            document.getElementById('modalTitle').textContent = task.title || 'ä»»åŠ¡è¯¦æƒ…';
            
            // æ˜¾ç¤ºå…ƒæ•°æ®
            document.getElementById('taskMeta').innerHTML = `
