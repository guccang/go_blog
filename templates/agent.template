            // ç›´æ¥ä½¿ç”¨ task å¯¹è±¡ä¸­çš„æ•°æ®æ„å»ºå†…å®¹
            let content = `## ä»»åŠ¡æè¿°\n\n${task.description}\n\n`;
            
            if (task.subtasks && task.subtasks.length > 0) {
