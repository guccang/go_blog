        async function taskAction(taskId, action) {
            try {
                const response = await fetch('/api/agent/task/action', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ task_id: taskId, action: action })
                });

                const data = await response.json();
                if (data.success) {
                    loadTasks();
                } else {
                    alert('æ“ä½œå¤±è´¥: ' + data.error);
                }
            } catch (error) {
                console.error('æ“ä½œå¤±è´¥:', error);
            }
        }

        function pauseTask(id) { taskAction(id, 'pause'); }
        function resumeTask(id) { taskAction(id, 'resume'); }
        function cancelTask(id) { taskAction(id, 'cancel'); }

        function deleteTask(id) {
            if (!confirm('ç¡®å®šè¦åˆ é™¤è¿™ä¸ªä»»åŠ¡å—ï¼Ÿ')) return;
            
            fetch(`/api/agent/task?id=${id}`, { method: 'DELETE' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        loadTasks();
                    } else {
                        alert('åˆ é™¤å¤±è´¥: ' + data.error);
                    }
                })
                .catch(err => console.error('åˆ é™¤å¤±è´¥:', err));
        }

        function updateStats(tasks) {
            const stats = { pending: 0, running: 0, done: 0, failed: 0 };
            tasks.forEach(t => {
                if (t.status === 'pending') stats.pending++;
                else if (t.status === 'running' || t.status === 'paused') stats.running++;
                else if (t.status === 'done') stats.done++;
                else stats.failed++;
            });

            document.getElementById('pendingCount').textContent = stats.pending;
            document.getElementById('runningCount').textContent = stats.running;
            document.getElementById('doneCount').textContent = stats.done;
            document.getElementById('failedCount').textContent = stats.failed;
        }



        function escapeHtml(str) {
            const div = document.createElement('div');
            div.textContent = str;
            return div.innerHTML;
        }

        function formatTime(timeStr) {
            if (!timeStr) return '';
            const date = new Date(timeStr);
            return date.toLocaleString('zh-CN');
        }
